<div class="authform">
<%= simple_form_for @customer, as: 'customer', html: { class: 'form-horizontal' },
  wrapper: :horizontal_form,
  wrapper_mappings: {
    boolean: :horizontal_boolean
  } do |f| %>

  <div class="field">
    <%= f.input :customer_number %><br>
  </div>

  <div class="field">
    <%= f.input :customer_name %><br>
  </div>
  <div class="field">
    <%= f.input :contact_name %><br>
  </div>
  <div class="field">
    <%= f.input :bill_attention %><br>
  </div>
  <div class="field">
    <%= f.select :invoice_type, Customer::INVOICE_OPTIONS %><br>
  </div>
  <div class="field">
    <%= f.input :need_to_work %><br>
  </div>

<br>
<br>
  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>